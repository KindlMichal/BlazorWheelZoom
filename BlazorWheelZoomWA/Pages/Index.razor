@page "/"
@using BlazorWheelZoomLibrary.Shared

<h1>Blazor Wheel Zoom</h1>
<p>User mouse wheel and drag image to move</p>

<div style="border: thin solid green; width: 510px; height: 510px; padding: 5px;">
    <WheelZoom Image="/mire.png" width="500" height="500" Rectangles="@rects" />
</div>
