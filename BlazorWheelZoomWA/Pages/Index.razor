    <WheelZoom Image="@($"data:image/png;base64, {image64}")" width="500" height="500" />
</div>*@

@code{

    List<BlazorWheelZoomLibrary.Rectangle> rects = new List<BlazorWheelZoomLibrary.Rectangle>();

    protected override void OnInitialized()
    {
        rects.Add(new BlazorWheelZoomLibrary.Rectangle() { left = 10, top = 10, right = 110, bottom = 110, color = "#FF0000", fill = "#FF0000", fill_opacity = "30%" });
        rects.Add(new BlazorWheelZoomLibrary.Rectangle() { left = 200, top = 200, right = 350, bottom = 350, color = "#FFFF00", fill = "#FFFF00", fill_opacity = "30%" });
    }
}